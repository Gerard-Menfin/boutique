{% extends 'base.html.twig' %}

{% block title %}Details index{% endblock %}

{% block body %}
    <h1>Details index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for detail in details %}
            <tr>
                <td>{{ detail.id }}</td>
                <td>{{ detail.quantite }}</td>
                <td>{{ detail.prix }}</td>
                <td>
                    <a href="{{ path('details_show', {'id': detail.id}) }}">show</a>
                    <a href="{{ path('details_edit', {'id': detail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('details_new') }}">Create new</a>
{% endblock %}
